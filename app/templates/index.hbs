<div class="container-fluid full-height">
    <div class="row full-height">
        <div class="col-sm-2 full-height">
            <div class="panel">
                <div class="panel-body">
                    <h1>HH /map</h1>
                    <hr />
                    <h5 class="fieldTitle">Location</h5>
                    <form role="form">
                        <div class="form-group">
                            {{input class="form-control" value=userLocationString}}
                        </div>
                    </form>
                    {{#if userLocationCoords.lat}}
                        <p>{{userLocationCoords.lat}}, {{userLocationCoords.lng}}</p>
                    {{/if}}
                </div>
            </div>

            <div class="panel-group" id="hackathon-weeks" role="tablist" aria-multiselectable="true">
                {{#each weekList in hackathonsByWeek}}
                    <div class="panel panel-default">
                        <div class="panel-heading" role="tab">
                            <h4 class="panel-title">
                                {{#if weekList.isUpcoming}}
                                    <a data-toggle="collapse" data-parent="#hackathon-weeks">
                                        {{live-stamp timestamp=weekList.timestamp}}
                                    </a>
                                {{/if}}
                            </h4>
                        </div>
                        {{#if weekList.isUpcoming}}
                            <ul class="list-group">
                                {{#each hackathon in weekList.hackathons}}
                                    <li class="list-group-item hackathons">
                                        {{hackathon.name}}
                                        <img class="pull-right" src="assets/img/triangle.png" alt="triangle">
                                        {{#if hackathon.distance}}
                                            <span class="pull-right">{{hackathon.distance}}</span>
                                        {{/if}}
                                    </li>
                                {{/each}}
                            </ul>
                        {{/if}}
                    </div>
                {{/each}}
            </div>
        </div>
        <div class="col-sm-10 full-height">
            {{google-maps latitude=userLocationCoords.lat longitude=userLocationCoords.lng zoom="5" markers=upcomingHackathons}}
        </div>
    </div>
</div>
